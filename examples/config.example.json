{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "TaskMaster Configuration Example (JSON)",

  "active_provider": "claude",

  "providers": {
    "claude": {
      "provider": "claude",
      "api_key": "$ANTHROPIC_API_KEY",
      "model": "claude-3-5-sonnet-20241022",
      "rate_limits": {
        "max_tokens_hour": 100000,
        "max_tokens_day": 500000,
        "max_tokens_week": 2000000,
        "max_requests_minute": 50
      },
      "max_tokens": 4000,
      "temperature": 0.7
    },

    "openai": {
      "provider": "openai",
      "api_key": "$OPENAI_API_KEY",
      "model": "gpt-4",
      "rate_limits": {
        "max_tokens_hour": 90000,
        "max_requests_minute": 60
      },
      "max_tokens": 4000,
      "temperature": 0.7
    }
  },

  "hook_defaults": {
    "pre_hooks": ["check-env"],
    "post_hooks": ["run-tests", "run-lint"],
    "test_command": "pytest",
    "lint_command": "ruff check src tests",
    "format_command": "ruff format src tests"
  },

  "state_dir": ".agent-runner",
  "log_dir": "logs",
  "max_attempts_per_task": 3,
  "max_consecutive_failures": 3,

  "metadata": {
    "project_name": "my-project",
    "environment": "development",
    "version": "1.0.0"
  }
}
